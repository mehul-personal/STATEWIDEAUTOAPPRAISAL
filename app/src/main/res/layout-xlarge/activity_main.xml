<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.statewideautoappraisal.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1e1e1e"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/str_top_label"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/str_name"
                    android:textColor="#ffffff"
                    android:textSize="38sp" />

                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_edittext_background"
                    android:ems="10"
                    android:inputType="textShortMessage"
                    android:minHeight="80dp"
                    android:paddingLeft="10dp"
                    android:textSize="38sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/str_phone"
                    android:textColor="#ffffff"
                    android:textSize="38sp" />

                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_edittext_background"
                    android:ems="10"
                    android:inputType="phone"
                    android:minHeight="80dp"
                    android:paddingLeft="10dp"
                    android:textSize="38sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/str_email"
                    android:textColor="#ffffff"
                    android:textSize="38sp" />

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_edittext_background"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:minHeight="80dp"
                    android:paddingLeft="10dp"
                    android:textSize="38sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/str_comments"
                    android:textColor="#ffffff"
                    android:textSize="38sp" />

                <EditText
                    android:id="@+id/edtComments"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/style_edittext_background"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:textSize="38sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/str_year"
                    android:textColor="#ffffff"
                    android:textSize="38sp" />

                <EditText
                    android:id="@+id/edtYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_edittext_background"
                    android:ems="10"
                    android:inputType="number"
                    android:minHeight="80dp"
                    android:paddingLeft="10dp"
                    android:textSize="38sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/str_make"
                    android:textColor="#ffffff"
                    android:textSize="38sp" />

                <EditText
                    android:id="@+id/edtMake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_edittext_background"
                    android:ems="10"
                    android:inputType="textShortMessage"
                    android:minHeight="80dp"
                    android:paddingLeft="10dp"
                    android:textSize="38sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/str_model"
                    android:textColor="#ffffff"
                    android:textSize="38sp" />

                <EditText
                    android:id="@+id/edtModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_edittext_background"
                    android:ems="10"
                    android:inputType="textShortMessage"
                    android:minHeight="80dp"
                    android:paddingLeft="10dp"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/txvImageGuideline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/str_image_guideline_view"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_right_front"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvRightFrontUploadImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvRightFrontImage"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_left_front"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvLeftFrontUploadImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvLeftFrontImage"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_right_rear"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvRightRearUploadImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvRightRearImage"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_left_rear"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvLeftRearUploadImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvLeftRearImage"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_license_plate"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvLicensePlate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvLicensePlateImage"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_vin_number"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvVinNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvVinNumberImage"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_mileage"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvMileage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvMileageImage"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_interior"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvInterior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvInteriorImage"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_damages"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvDamage1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvDamageImage1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvDamage2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvDamageImage2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/txvDamage3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_upload_image"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />

                    <ImageView
                        android:id="@+id/imvDamageImage3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_square_no_image" />
                </LinearLayout>

                <Button  android:id="@+id/btnSubmit"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/style_button_background"
                    android:minHeight="80dp"
                    android:text="@string/str_submit"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="40sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
